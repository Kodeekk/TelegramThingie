DATABASE_URL=sqlite+aiosqlite:///telegram_bot.db
ECHO=false

# Public base URL for your webhook (ngrok/https domain)
WEBHOOK_BASE_URL=https://your-ngrok-subdomain.ngrok-free.app

# Local server bind
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080

# Webhook paths
WEBHOOK_PATH_PREFIX=/telegram
WEBHOOK_PATH=/telegram/webhook

# Optional security
WEBHOOK_SECRET_TOKEN=

# Telegram webhook settings
WEBHOOK_DROP_PENDING_UPDATES=true
WEBHOOK_ALLOWED_UPDATES=message,callback_query

# Managers (CSV list of Telegram user IDs)
MANAGER_IDS=741343652

# Single bot (simple case)
BOT_TOKEN=
# Or full URL for a single bot (overrides base+path)
WEBHOOK_URL=

# Multiple bots (CSV lists):
# BOT_TOKENS=TOKEN1,TOKEN2
# BOT_NAMES=bot1,bot2
